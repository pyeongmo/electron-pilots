{
  "name": "pilot-client",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.10.0"
  },
  "devDependencies": {
    "electron": "22.3.27",
    "electron-builder": "23.6.0"
  },
  "build": {
    "appId": "kr.co.neilson.pilot.client",
    "productName": "Pilot Client App",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
