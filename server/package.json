{
  "name": "pilot-server",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^4.2.0"
  },
  "devDependencies": {
    "electron": "22.3.27",
    "electron-builder": "23.6.0"
  },
  "build": {
    "appId": "kr.co.neilson.pilot.server",
    "productName": "Pilot Server",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "**/*",
      "!node_modules/.bin",
      "!node_modules/electron"
    ],
    "extraFiles": [
      {
        "from": "node_modules/sqlite3/build/Release/",
        "to": "node_modules/sqlite3/build/Release/",
        "filter": ["**/*"]
      }
    ],
    "asarUnpack": [
      "**/node_modules/sqlite3/**/*"
    ]
  }
}
